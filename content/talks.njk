---js
const eleventyNavigation = {
	key: "Talks",
	order: 2
};
---

{%- css %}{% include "public/css/talks.css" %}{% endcss %}

<h1>Talks</h1>
<p class="talks-desc">
	Invited talks, panels, and guest lectures in reverse chronological order.
</p>

<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Location</th>
			<th>Title</th>
			<th>Type</th>
		</tr>
	</thead>
	<tbody>
		{%- for talk in talks %}
		<tr>
			<td>{{ talk.date }}</td>
			<td>{{ talk.location }}</td>
			<td class="talk-title">{{ talk.title }}</td>
			<td>{{ talk.type }}</td>
		</tr>
		{%- endfor %}
	</tbody>
</table>
